<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DadosSensoresMvc</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
	<main class="layout">
		<header class="header">
			<div class="header_content">
				<h1 class="header_title">Matrix</h1>
				<p class="header_subtitle">Registros de monitoramento</p>
			</div>
		</header>

		<div class="layout_content container flex-wrap">
			@RenderBody()
		</div>

		<footer class="border-top layout_footer footer text-muted">
			<div class="container">
				<div class="d-flex justify-content-between">
					<span class="d-inline-block">&copy; 2020 - Matrix </span>

					<a class="d-inline-block" asp-area="" asp-controller="Contato" asp-action="Index">Contato</a>
				</div>
			</div>
		</footer>
	</main>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@RenderSection("Scripts", required: false)
</body>
</html>
